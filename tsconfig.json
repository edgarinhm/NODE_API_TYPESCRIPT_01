{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "rootDirs": [
      "src",
      "tests"
    ],
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/tests/*": [
        "../tests/*"
      ]
    },
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "extends": "@tsconfig/node14/tsconfig.json",
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules"
  ],
}